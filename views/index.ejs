<!DOCTYPE html>
<html>
<head>
  <title>CRUD Node.js</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>Formulario de Usuarios</h1>

  <form action="/add" method="POST">
    <input type="text" name="nombre" placeholder="Nombre" required>
    <input type="email" name="email" placeholder="Email" required>
    <textarea name="comentario" placeholder="Comentario"></textarea>
    <button type="submit">Agregar</button>
  </form>

  <h2>Usuarios Registrados</h2>
  <table border="1">
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Email</th>
      <th>Comentario</th>
      <th>Acciones</th>
    </tr>
    <% usuarios.forEach(u => { %>
    <tr>
      <form action="/update/<%= u.id %>" method="POST">
        <td><%= u.id %></td>
        <td><input name="nombre" value="<%= u.nombre %>"></td>
        <td><input name="email" value="<%= u.email %>"></td>
        <td><input name="comentario" value="<%= u.comentario %>"></td>
        <td>
          <button type="submit">Actualizar</button>
      </form>
      <form action="/delete/<%= u.id %>" method="POST" style="display:inline;">
        <button type="submit">Eliminar</button>
      </form>
        </td>
    </tr>
    <% }) %>
  </table>
</body>
</html>
